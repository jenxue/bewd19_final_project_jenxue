<style>
.title{text-align: center;
  color: #3A5E84;
  font-family: 'Righteous', cursive;
}
</style>

<h1 class = "title">Create a new event</h1>
<%= form_for @event do |f| %>
  <fieldset>
    
    <div class='fields'>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class='fields'>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>
    <div class='fields'>
      <%= f.label :start_time %>
      <%= f.text_field :start_time %>
    </div>
    <div class='fields'>
      <%= f.label :end_time %>
      <%= f.text_field :end_time %>
    </div>
    <div class='fields'>
      <%= f.label :location %>
      <%= f.text_field :location %>
    </div>

  </fieldset>

  <div style="text-align: center;">
    <%= f.submit 'Create event', :class => 'button' %>
  </div>
<% end %>
